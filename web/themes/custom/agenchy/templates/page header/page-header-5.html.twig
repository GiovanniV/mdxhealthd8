<!-- Page Header -->
<div class="page-header img-bg parallax-bg bg-cover" data-background="{{ image_page_header_bg }}" data-stellar-background-ratio="0.5" >
	<div class="container relative z-index">
		<div class="row">
			<div class="col-xs-12">
				<!-- Page Header Wrapper -->
				<div class="page-header-wrapper">
					<!-- Title & Sub Title -->
					<h3 class="title">{{ title }}</h3>
                    {{ page.breadcrumb }}
                    <!-- Button -->
                    {% if button_page_header_button %}
						<div class="btn-wrapper">
							{{ button_page_header_button|t }}
						</div>
					{% endif %}
				</div><!-- Page Header Wrapper -->
			</div><!-- Coloumn -->
		</div><!-- Row -->
	</div><!-- Container -->
</div><!-- Page Header -->