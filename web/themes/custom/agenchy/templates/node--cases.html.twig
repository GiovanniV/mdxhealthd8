{% set bg_img_url = file_url(node.field_case_image.0.entity.uri.value) %}
{% set user_name = node.getRevisionAuthor().name.value %}
{% set full_name = node.getRevisionAuthor().field_full_name.value %}
{% if page %}
    <!-- Case Wrapper -->
    <div class="row case-single">
        <!-- Case Banner Image -->
        <div class="col-md-12">
            <div class="owl-crousel">
                <img alt="{{ title }}" class="img-responsive" src="{{ bg_img_url }}" width="1920" height="966">
            </div>
        </div><!-- Column -->	
    </div><!-- Case Wrapper -->

    {{ content.body }}

    <div class="row case-full-detail">
        <div class="col-md-12">	
            <!-- Related -->
            {% if is_exist_rp_cases %}
            <h4>{{ 'Related Cases :'|t }}</h4>
            <div class="owl-carousel show-nav-hover dots-dark nav-square dots-square navigation-color" data-animatein="" data-animateout="" data-items="1" data-margin="30" data-loop="true" data-merge="true" data-nav="true" data-dots="false" data-stagepadding="" data-mobile="1" data-tablet="2" data-desktopsmall="2"  data-desktop="3" data-autoplay="true" data-delay="3000" data-navigation="true">
                {{ related_posts_cases|t }}
            </div><!-- Related Post -->
            {% endif %}
        </div><!-- Column -->
    </div><!-- row -->
{% elseif vcname == 'cases_category' %}
    <!-- List -->
    <li class="col-sm-12">
        <!-- Course Wrapper -->
        <div class="row case-wrapper">
            <!-- Course Banner Image -->
            <div class="col-sm-5">
                <div class="case-banner-wrap">
                    {% set imageoneURL = getUrlByImageStyle(node.field_case_image.0.entity.uri.value, 'image_500x338') %}
                    <img alt="{{ node.getTitle() }}" class="img-responsive" src="{{ imageoneURL }}" width="500" height="220">
                    <span class="cat">{{ content.field_categories_cases }}</span>
                </div><!-- Course Banner Image -->
            </div><!-- Column -->   
            <!-- Course Detail -->
            <div class="col-sm-7">
                <div class="case-detail-wrap">
                    <!-- Course Content -->
                    <div class="case-content">
                        <h4><a href="{{ url }}">{{ node.getTitle() }}</a></h4>
                        <h5>{% if full_name %}{{ full_name }}{% else %}{{ user_name }}{% endif %}</h5>
                        <p>{{ node.body.summary|length > 300 ? node.body.summary|slice(0,150) ~ '...' : node.body.summary }}</p>
                        <a href="{{ url }}" class="btn">Know more</a>
                    </div><!-- Course Content -->
                </div><!-- Course Detail -->
            </div><!-- Column -->   
        </div><!-- Course Wrapper -->
        <!-- Divider -->
        <hr class="md">
    </li><!-- List -->
{% else %}
    <!-- List -->
    <li class="col-sm-12">
        <!-- Course Wrapper -->
        <div class="row case-wrapper">
            <!-- Course Banner Image -->
            <div class="col-sm-5">
